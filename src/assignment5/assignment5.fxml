<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment5.Main">
   <children>
      <ComboBox fx:id="cbox" layoutX="60.0" layoutY="130.0" prefWidth="150.0" promptText="Select Critter" />
      <Button fx:id="makeButton" layoutX="83.0" layoutY="158.0" mnemonicParsing="false" onAction="#makeCritter" text="Make Critter(s)" />
      <Button fx:id="stepButton" layoutX="69.0" layoutY="258.0" mnemonicParsing="false" onAction="#executeTimeSteps" text="Execute Timestep(s)" />
      <TextField fx:id="numSteps" layoutX="49.0" layoutY="230.0" promptText="Enter number of Timesteps" />
      <TextField fx:id="seedValue" layoutX="49.0" layoutY="339.0" promptText="Enter seed value" />
      <Button fx:id="seedButton" layoutX="112.0" layoutY="367.0" mnemonicParsing="false" text="Seed" />
      <Button fx:id="showButton" layoutX="85.0" layoutY="441.0" mnemonicParsing="false" onAction="#displayWorld" text="Display World" />
      <Button fx:id="statsButton" layoutX="77.0" layoutY="512.0" mnemonicParsing="false" onAction="#displayStats" text="Display Statistics" />
      <Button fx:id="endButton" layoutX="83.0" layoutY="821.0" mnemonicParsing="false" onAction="#endSimulation" text="Exit Simulation" />
      <TextField fx:id="numCritters" layoutX="49.0" layoutY="102.0" promptText="Number of Critters to make" />
      <Button fx:id="startAni" layoutX="82.0" layoutY="640.0" mnemonicParsing="false" onAction="#startAnimation" text="Start Animation" />
      <TextField fx:id="numAni" layoutX="49.0" layoutY="668.0" promptText="Enter desired animation tps" />
      <Button fx:id="stopAni" layoutX="82.0" layoutY="696.0" mnemonicParsing="false" onAction="#stopAnimation" text="Stop Animation" />
   </children>
</AnchorPane>
